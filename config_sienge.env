# Botão de Download (baseado na interface real)
RELATORIO_BOTAO_DOWNLOAD=//button[contains(text(), "GERAR RELATÓRIO")]

# Modal de Exportação
RELATORIO_MODAL_EXPORTACAO=//div[contains(@class, "modal") and contains(., "Gerar relatório")]
